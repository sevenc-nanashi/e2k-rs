    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true
  },
  "include": ["build.ts", "tests/**/*.ts"]
}
